@{
    var controladorActual = ViewContext.RouteData.Values["controller"]?.ToString();

    var controladoresPublicos = new[] { "Home" };

    if (controladoresPublicos.Contains(controladorActual))
    {
        Layout = "_LayoutPublico";
    }
    else if (controladorActual == "Account")
    {
        Layout = "_LayoutAuth";
    }
    else
    {
        Layout = "_LayoutERP";
    }
}
