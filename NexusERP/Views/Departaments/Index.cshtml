@model List<Departamento>

@{
    ViewData["Title"] = "Departamentos y Equipo";
}

<div class="container-fluid py-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold mb-1 text-dark-heading">Departamentos y Equipo</h2>
            <p class="text-muted mb-0 small">Gestiona las áreas, presupuestos y personal de tu empresa.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary d-flex align-items-center gap-2 px-3">
                <svg style="width: 18px; height: 18px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Añadir Empleado
            </button>
            <button class="btn btn-primary-custom d-flex align-items-center gap-2 px-3" data-bs-toggle="modal" data-bs-target="#modal-add-department">
                <svg style="width: 18px; height: 18px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                Nuevo Departamento
            </button>
        </div>
    </div>

    <!-- CARDS DE DEPARTAMENTOS -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mb-4">

        @if (Model != null )
        {
            @foreach (var dept in Model)
            {
                <div class="col">
                    <div class="card card-custom h-100 bg-white p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="fw-bold mb-0 text-content">@dept.Nombre</h5>
                            <div class="icon-box">
                                <svg style="width: 20px; height: 20px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-baseline gap-2 mb-2">
                                <span class="fs-3 fw-bold text-dark">@* @dept.NumeroEmpleados *@12</span>
                                <span class="text-muted small">empleados</span>
                            </div>
                            <div class="d-flex justify-content-between small mb-1">
                                <span class="text-muted">Salario Promedio:</span>
                                <span class="fw-medium">@* @dept.SalarioPromedio.ToString("N0") *@42.500 €</span>
                            </div>
                            <div class="d-flex justify-content-between small">
                                <span class="text-muted">Presupuesto Mensual:</span>
                                <span class="fw-bold text-secondary-custom">@dept.PresupuestoMensual €</span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-auto pt-3 border-top">
                            <a asp-controller="Departaments" asp-action="Details" asp-route-id="@dept.Id"
                               class="btn btn-sm btn-light flex-fill d-flex align-items-center justify-content-center gap-1 text-muted"
                               title="Ver Detalles">
                                <svg style="width: 16px; height: 16px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                Ver
                            </a>
                            <button onclick="openAddEmployeeModal('@dept.Id', '@dept.Nombre')"
                                    class="btn btn-sm btn-outline-custom flex-fill d-flex align-items-center justify-content-center gap-1"
                                    title="Añadir Empleado">
                                <svg style="width: 16px; height: 16px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Añadir
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- TABLA DE EMPLEADOS -->
    <div class="card card-custom bg-white p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="fw-bold mb-0 text-content">Miembros del Equipo</h5>
            <select class="form-select form-select-sm w-auto" style="border-radius: 0.5rem;">
                <option>Todos los Departamentos</option>
                @if (Model != null && Model.Any())
                {
                    @foreach (var dept in Model)
                    {
                        <option value="@dept.Id">@dept.Nombre</option>
                    }
                }
            </select>
        </div>

        <div class="table-responsive">
            <table class="table table-custom table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Puesto</th>
                        <th>Departamento</th>
                        <th>Salario</th>
                        <th>F. Contratación</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- TODO: Aquí irá el foreach de empleados desde tu ViewModel -->
                    <tr>
                        <td>
                            <div class="fw-bold text-dark">Juan Pérez</div>
                            <div class="small text-muted">juan.perez@tuempresa.com</div>
                        </td>
                        <td>Desarrollador Senior</td>
                        <td><span class="badge badge-soft-primary rounded-pill px-3 py-2">Ingeniería</span></td>
                        <td class="fw-medium">45.000 €</td>
                        <td>15 Ene 2023</td>
                        <td><span class="badge badge-soft-success rounded-pill px-3 py-2">Activo</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-link text-muted p-0 me-2" title="Editar">
                                <svg style="width: 18px; height: 18px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                            </button>
                            <button class="btn btn-sm btn-link text-danger p-0" title="Eliminar">
                                <svg style="width: 18px; height: 18px" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_IndexModals" model="new NexusERP.ViewModels.CreateDepartamentoViewModel()" />

@section Scripts {
    <script src="~/js/departamentos-index.js" asp-append-version="true"></script>
}